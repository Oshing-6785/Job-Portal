<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login Page</title>
    <link rel="stylesheet" href="/login.css">
    <script>
      function goToSignup() { window.location.href = '/signup'; }
    </script>
    <script>
      function goToForgot() { window.location.href = '/forget'; }
    </script>
  </head>
  <body>
    <h1>Login Page</h1>
    <form action="/login" method="post">
      <label for="name">please enter the username</label>
      <input type="text" name="name" placeholder="Name" />
      <label for="password">please enter the password</label>
      <input type="password" name="password" placeholder="Password" />
      <input type="submit" value="Login" />
    </form>
    <button onclick="goToForgot()">Forgot Password</button>
    <button onclick="goToSignup()">Signup</button>
    <script>
      const error = "{{error}}"; if (error && error !== '') { alert(error); }
      const success = "{{success}}"; if (success && success !== '') {
      alert(success); }
    </script>
    <a href="/google/google">Login with Gmail</a>
  </body>
</html>